{
  "name": "slugifybr",
  "version": "0.0.2",
  "description": "Gera slugs limpos e consistentes para textos em portuguÃªs do Brasil",
  "main": "index.js",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run test",
    "commit-msg": "npx commitlint --edit"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist docs",
    "dev": "tsup --watch",
    "docs": "typedoc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "prepare": "npx simple-git-hooks",
    "start": "tsx src/index.ts",
    "test": "vitest run --silent",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch"
  },
  "author": "Emmanuel Ramon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramown/slugifybr.git"
  },
  "license": "MIT",
  "keywords": [
    "slug",
    "slugify",
    "slugifybr",
    "url",
    "url-safe",
    "normalize",
    "pt-br",
    "portuguese",
    "remove-accents",
    "text-cleaning",
    "typescript",
    "string",
    "seo",
    "text-utils"
  ],
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.18",
    "@vitest/ui": "^3.1.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  }
}